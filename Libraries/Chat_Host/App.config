<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="SavedLocation" value="..\..\..\..\Files\"/>
    <add key="SavedLocationTemp" value="..\..\..\..\FilesTemp\"/>
  </appSettings>
  <system.web>
    <compilation debug="true"/>
  </system.web>
  <system.serviceModel>

    <bindings>
      <netTcpBinding>
        <binding name="NewBinding1" listenBacklog="10" maxBufferPoolSize="157286400"
            maxConnections="10" maxReceivedMessageSize="104857600" />
      </netTcpBinding>
    </bindings>

    <services>

      <service behaviorConfiguration="NewBehavior0" name="FileSharing.Server.Service">
        <endpoint address="net.tcp://localhost:3021/FileSharingService/ep1"
                  binding="netTcpBinding" bindingConfiguration="NewBinding1"
            name="ep1" contract="FileSharing.Server.IService" />
        <endpoint address="" binding="mexTcpBinding" bindingConfiguration=""
            name="mex" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:5210/FileSharingService" />
          </baseAddresses>
        </host>
      </service>

      <service behaviorConfiguration="ServiceBehaviourProgramMessenger" name="ProgramMessenger_WcfSL.ServiceProgramMessenger">
        <endpoint address="ws" binding="wsDualHttpBinding" name="wsEndpointPM" contract="ProgramMessenger_WcfSL.IServiceProgramMessenger"/>
        <endpoint address="mex" binding="mexHttpBinding" name="mexEndpointPM" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8734/ServiceProgramMessenger/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehaviour0">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>

        <behavior name="NewBehavior0">
          <serviceMetadata httpGetEnabled="false" />
        </behavior>
        <behavior name="ServiceBehaviourProgramMessenger">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
